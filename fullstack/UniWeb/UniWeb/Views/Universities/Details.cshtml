<div class="mdk-box bg-primary js-mdk-box mb-0" data-effects="blend-background" data-domfactory-upgraded="mdk-box"><div class="mdk-box__bg"><div class="mdk-box__bg-front" style="transform: translateZ(0px); will-change: opacity; opacity: 1;"></div><div class="mdk-box__bg-rear" style="transform: translateZ(0px); will-change: opacity; opacity: 0;"></div></div>
  <div class="mdk-box__content">
    <div class="hero py-64pt text-center text-sm-left">
      <div class="container page__container">
        <div class="additional__information__container">
          <div class="programs__block">
            <span>@Model.NumbersOfPrograms программ подготовки</span>
          </div>
          <div class="programs__block__2">
            <span>@Model.NumbersOfPrograms кампусов</span>
          </div>
        </div>
        <h1 class="text-white" style="padding: 0 !important; margin: 0 !important; ">@Model.Name</h1>
        <p class="lead text-white-50 mt-4 font-size-20pt">@Model.Description</p>
        <div class="d-flex flex-column flex-sm-row align-items-center justify-content-start">
          <a href="@Model.Website" target="_blank" class="btn btn-outline-white mb-16pt mb-sm-0 mr-sm-16pt">Официальный сайт</a>
          <a asp-action="Details" asp-controller="Universities" asp-fragment="3d" asp-route-id="@Model.Id" class="btn btn-white">Посмотреть 3D тур</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mt-3 mb-3">
  <div class="page-separator panorama__container">
    <div class="page-separator__text">Фотографии</div>
  </div>
  <!-- Фотографии из университета  -->
  <div id="carouselExampleIndicators" class="carousel slide" style="border-radius: 10px">
    <div class="carousel-inner">
      @{
      var dir = new DirectoryInfo($"{HostingEnvironment.WebRootPath}/unistorage/{Model.Id}/");
      var photos = dir.GetFiles();

      <div class="carousel-item active">
        <img src="~/unistorage/@Model.Id/@photos[0].Name" style="max-height: 600px; border-radius: 10px"  class="d-block w-100" alt="">
      </div>

      for (var i = 1; i < photos.Length; i++)
      {
      <div class="carousel-item">
        <img src="~/unistorage/@Model.Id/@photos[i].Name" style="max-height: 600px; border-radius: 10px" class="d-block w-100" alt="">
      </div>
      }
      }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Назад</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Следующая</span>
    </button>
  </div>
</div>

