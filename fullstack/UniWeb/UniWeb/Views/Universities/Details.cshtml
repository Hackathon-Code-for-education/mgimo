<style>
  .additional__information__container{
    display: flex;
    justify-content: flex-start;
  }
  
  .programs__block{
    background-color: white;
    color: var(--accent-dodger-blue);
    padding: 20px 30px;
    border-radius: 20px;
    font-size: 16px;
    font-style: normal !important;
    font-weight: 800;
    margin-bottom: 30px;
    margin-right: 10px;
    display: flex;
    align-items: center;
    text-align: center;
  }

  .programs__block__2{
    border: white solid;
    color: white;
    padding: 20px 30px;
    border-radius: 20px;
    font-size: 16px;
    font-style: normal !important;
    font-weight: 800;
    margin-bottom: 30px;
    margin-right: 10px;
    display: flex;
    align-items: center;
    text-align: center;
