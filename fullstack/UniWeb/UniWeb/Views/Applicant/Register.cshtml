@model UniWeb.Entities.WebModels.Applicant.ApplicantRegisterViewModel
@{
    ViewBag.Title = "Регистрация";
    Layout = "_Layout";
}

<div class="mt-4 pb-32pt">
    <div class="page__container">
        <h1 class="text-center mb-4">Создание аккаунта</h1>
        <form asp-action="Register" asp-controller="Applicant" method="post"
              class="col-md-5 p-0 mx-auto">
            <div class="form-group">
                <label class="form-label"
                       for="email">Почта</label>
                
                <input id="email"
                       type="text"
                       class="form-control"
                       asp-for="Email"
                       placeholder="beststudent@me.ru">

                <p style="color: gray; font-size: 12px">Обратите внимание, что ваша почта будет вашим логином для входа</p>
            </div>

            <div class="form-group">
                <label class="form-label"
                       for="phone">Номер телефона</label>
                <input id="phone"
                       type="text"
                       class="form-control"
                       asp-for="Phone"
                       placeholder="+7(999)738-23-11">
            </div>
            <div class="form-group">
                <label class="form-label"
                       for="name">Имя</label>
                <input id="name"
                       type="text"
                       class="form-control"
                       asp-for="Name"
                       placeholder="Анакентий">
            </div>
            <div class="form-group">
                <label class="form-label"
                       for="surname">Фамилия</label>
                <input id="surname"
                       type="text"
                       class="form-control"
                       asp-for="Surname"
                       placeholder="Вагнер">
            </div>
            
            <div class="form-group">
                <label class="form-label"
                       for="password">Пароль</label>
                <input id="password"
                       type="password"
                       asp-for="Password"
                       class="form-control"
                       placeholder="qwerty123">
            </div>

            <div class="form-group">
                <label class="form-label"
                       for="password-confirm">Пароль</label>
                <input id="password-confirm"
                       type="password"
                       asp-for="PasswordConfirm"
                       class="form-control"
                       placeholder="qwerty123">
            </div>
            
            <div asp-validation-summary="ModelOnly" style="color: red; text-decoration: none"></div>
            
            <div class="text-center">
                <button class="btn btn-primary">Зарегистрироваться</button>
            </div>
        </form>
    </div>
</div>